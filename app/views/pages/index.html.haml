.header
  .header__name
    %h1.header__name-portfolio PORTFOLIO
    %p.header__name-masakimurakami - Masaki Murakami -
  .header__tab
    = link_to "ABOUT", "#", class: "tab-brack"
    = link_to "WORKS", "#", class: "tab-white"
    = link_to "PROFILE", "#", class: "tab-brack"
    = link_to "STORY", "#", class: "tab-white"
.tv
  = image_tag("/assets/index-tv-before.jpeg", class: "tv-image")
  .tv__space-1
    = image_tag("/assets/tv-portfolio-image-0.jpeg", class: "tv-portfolio-image-0")
    = image_tag("/assets/tv-portfolio-image-1.jpeg", class: "tv-portfolio-image-1 portfolio-image show")
    = image_tag("/assets/tv-portfolio-image-2.jpeg", class: "tv-portfolio-image-2 portfolio-image hide")
    = image_tag("/assets/tv-portfolio-image-3.jpeg", class: "tv-portfolio-image-3 portfolio-image hide")

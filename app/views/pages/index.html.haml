    = image_tag("/assets/tv-portfolio-image-0.jpeg", class: "tv-masaki-image-0")
    = image_tag("/assets/tv-portfolio-image-2.jpeg", class: "tv-masaki-image-1 show")
  .tv__space-3
    = image_tag("/assets/tv-portfolio-image-0.jpeg", class: "tv-murakami-image-0")
    = image_tag("/assets/tv-portfolio-image-3.jpeg", class: "tv-murakami-image-1 show")
  .tv__tab
    .tv__tab-portforio-1.portfolio-btn.active
    .tv__tab-portforio-2.portfolio-btn
    .tv__tab-portforio-3.portfolio-btn
    .tv__tab-masaki-1
    .tv__tab-masaki-2
    .tv__tab-masaki-3
    .tv__tab-murakami-1
    .tv__tab-murakami-2
    .tv__tab-murakami-3
